 <div class="container">

  <div class="h"></div>
  <form action="<%= rides_path %>" method= "get" id="totor-form">

    <div class="tagline mt">
      <div class="row">
        <div class="col-xs-12">
          <p>Rentre chez toi grâce à tes voisins de train !</p>
        </div>
      </div>
    </div>

    <div class="form-group mt ">
        <div class="row">
          <div class="col-xs-12">
            <input class="form-control truncate soft-angle height-form-60" type="text" name="search[start_point]" id="search-stations" placeholder="Gare d'arrivée">
          </div>
        </div>
    </div>
    <div class="form-group mt">
      <div class="row">
        <div class="col-xs-12">
          <input type="text" name="search[end_point]" class="form-control soft-angle height-form-60" id="dest" placeholder="Destination finale" required>
        </div>
      </div>
    </div>


    <!-- Date Time -->
    <div style="overflow:hidden;">
       <div class="form-group">
           <div class="row">
               <div class="col-xs-12">
                    <div id="datetimepicker12" data-date="12/03/2012 12:00 PM"></div>
                    <input type="hidden" name="train_arrival_at" id="hdp" value="">


               </div>
           </div>
       </div>
    </div>

    <div class="form-group">
      <label for="train-num"></label>
      <input type="text" name="search[train_ref]" class="form-control soft-angle height-form-60" id="train-num" placeholder="Numéro de train">
    </div>
    <div class="form-group row ">
<!--         <div class="col-xs-8">
            <label type="text" class="form-control truncate soft-angle height-form-60" >Nombre de passagers
            </label>
        </div> -->
        <div class="col-xs-12 ">
          <select class="form-control soft-angle height-form-60" type="text" name="search[passenger_number]" required>
            <option value="1">1 passager </option>
            <option value="2">2 passagers </option>
            <option value="3">3 passagers </option>
            <option value="4">4 passagers </option>
            <option value="5">5 passagers </option>
            <option value="6">6 passagers </option>
            <option value="7">7 passagers </option>
          </select>
        </div>
    </div>


    <input type="submit" name="submit-button" value =" Chercher un trajet" class="btn btn-default col-xs-12 soft-angle height-form-60" href="">

  </form>

