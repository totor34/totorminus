                <option value="15">15h</option>
                <option value="16">16h</option>
                <option value="17">17h</option>
                <option value="18">18h</option>
                <option value="19">19h</option>
                <option value="20">20h</option>
                <option value="21">21h</option>
                <option value="22">22h</option>
                <option value="23">23h</option>
                <option value="00">00h</option>
              </select>
            </div>
        </div>
        <div class="form-group">
          <label for="train-num"></label>
          <input type="text" name="search[train_ref]" class="form-control soft-angle" id="train-num" placeholder="Numéros de train">
        </div>
        <div class="form-group">
          <label for="dest"></label>
          <input type="text" name="search[end_point]" class="form-control soft-angle" id="dest" placeholder="Saisissez une destination" required>
        </div>
        <div class="form-group row ">
            <div class="col-xs-8">
                <label type="text" class="form-control truncate soft-angle
      "  id="exampleInputPassword1" >
              Nombre de passagers
                </label>
            </div>
            <div class="col-xs-4 ">
              <select class="form-control soft-angle
        " type="text" name="search[passenger_number]" required>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
              </select>
            </div>
        </div>


        <input type="submit" name="submit-button" value =" Submit" class="btn btn-default col-xs-4 soft-angle" href="">

      </form>
    </div>


