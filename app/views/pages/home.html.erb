                <option>Gare de Lille Flandre</option>
                <option>Avigon TGV</option>
              </select>
            </div>
        </div>
        <div class="form-group ">
          <label for="day"></label>
          <input type="date" name ="search[train_arrival_date]" class="form-control soft-angle" id="day" placeholder="Jour d'arrivée" required>
        </div>


        <div class="form-group row">
            <div class="col-xs-8">
              <label type="text" class="form-control truncate soft-angle"  id="exampleInputPassword1" > Heure d'arrivée </label>
            </div>
            <div class="col-xs-4 ">
              <select class="form-control soft-angle" type="time" name="search[train_arrival_time]">
