<div class="container">
  <div class= "row">
    <div class="col-xs-6">
    <% if @ride.user.photo? %>
      <%= cl_image_tag @ride.user.photo.path, width: 50, height: 50, crop: :fill,class: 'image-circle', "data-toggle" => "dropdown" %>
      <% else %>
      <%= image_tag 'default_avatar_pic.svg', width: 50, height: 50, crop: :fill, class: 'image-circle', "data-toggle" => "dropdown" %>
      <% end %>
    </div>


    <div>
      <div class="col-xs-4" >
        <%= @ride.user.first_name %>
      </div>

      <div>
        <%= @ride.price %> euros

      </div>

      <p> Dans votre train</p>

      <div> <strong> Arrivant à :</strong> <%= @ride.start_point.station %>
      </div>


      <div> <strong> Propose un trajet pour :</strong> <%= @ride.end_point.address %>
      </div>
    </div>
  </div>

  <div id="map" style="width: 100%; height: 300px;"></div>

  <% content_for(:after_js) do %>
