<div class="container container-content">
  <div class="row">
    <div class="col-xs-10 col-xs-1-offset">
      <div class="text-center">
        <h1>Réservation confirmée!</h1>
        <p>Départ: <%= @booking.start_point.station %></p>
        <p>Arrivée: <%= @booking.end_point.address %></p>
        <p>Conducteur : <%= @booking.ride.user.first_name %> </p>
        <p>Arrivée de son train : le <%= @booking.ride.train_arrival_date.strftime(" %d %b %Y") %> à <%= @booking.ride.train_arrival_time.strftime("%Hh%M")  %></p>
        <p>Places réservées : <%= @booking.passenger_number %></p>
        <p>Prix total : A RAJOUTER</p>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-xs-10 col-xs-1-offset">
      <div class="text-center bg-white soft-angle p- text-14">
        <%= @booking.ride.description %>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-xs-10 col-xs-1-offset">
    <%= cl_image_tag current_user.photo.path, height: 50, width: 50, class:'image-circle'  %>
    <%= image_tag 'car.svg', height: 200, width: 200 %>
    </div>
</div>
